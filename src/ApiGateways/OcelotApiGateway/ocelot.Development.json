{
	"Routes": [
		//Catalog API
		{
			"DownstreamPathTemplate": "/api/v1/Catalog/GetProducts",
			"DownstreamScheme": "http",
			"DownstreamHostAndPorts": [
				{
					"Host": "catalog-api",
					"Port": "80"
				}
			],
			"UpstreamPathTemplate": "/Product",
			"UpstreamHttpMethod": [ "GET" ],
			"FileCacheOptions": { "TtlSeconds": 30 }
		},
		{
			"DownstreamPathTemplate": "/api/v1/Catalog/UpdateProduct",
			"DownstreamScheme": "http",
			"DownstreamHostAndPorts": [
				{
					"Host": "catalog-api",
					"Port": "80"
				}
			],
			"UpstreamPathTemplate": "/Product",
			"UpstreamHttpMethod": [ "PUT" ],
			"FileCacheOptions": { "TtlSeconds": 30 }
		},
		{
			"DownstreamPathTemplate": "/api/v1/Catalog/CreateProduct",
			"DownstreamScheme": "http",
			"DownstreamHostAndPorts": [
				{
					"Host": "catalog-api",
					"Port": "80"
				}
			],
			"UpstreamPathTemplate": "/Product",
			"UpstreamHttpMethod": [ "POST" ],
			"FileCacheOptions": { "TtlSeconds": 30 }
		},
		{
			"DownstreamPathTemplate": "/api/v1/Catalog/GetProductsByCategory/{category}",
