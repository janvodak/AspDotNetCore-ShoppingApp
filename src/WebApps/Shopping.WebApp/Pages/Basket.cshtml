@page
@model Shopping.WebApp.Pages.BasketModel
@{
	ViewData["Title"] = "Basket";
}

<div class="container">
	<div class="row">
		<div class="col">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
					<li class="breadcrumb-item active" aria-current="page">Basket</li>
				</ol>
			</nav>
		</div>
	</div>
</div>

<div class="container mb-4">
	<div class="row">
		<div class="col-12">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col"> </th>
							<th scope="col">Product</th>
							<th scope="col">Available</th>
							<th scope="col" class="text-center">Quantity</th>
							<th scope="col" class="text-end">Price</th>
							<th> </th>
						</tr>
					</thead>
					<tbody>

						@foreach (var basketProduct in Model.Basket.Products)
						{
							<tr>
								<td><img src="https://dummyimage.com/50x50/55595c/fff" /></td>
								<td>@basketProduct.Name</td>
								<td>In stock</td>
								<td><input class="form-control" type="text" value="@basketProduct.Quantity" /></td>
								<td class="text-end">@(basketProduct.Price * basketProduct.Quantity) $</td>
								<td class="text-end">

									<form asp-page-handler="removefrombasket" method="post">
										<button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
										<input type="hidden" asp-for="@basketProduct.Id" name="productId" />
									</form>

								</td>
							</tr>
						}

						<tr>
							<td></td>
							<td></td>
							<td></td>
							<td></td>
							<td><strong>Total</strong></td>
							<td class="text-end"><strong>@Model.Basket.TotalPrice $</strong></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="col mb-2">
			<div class="row">
				<div class="col-sm-12  col-md-6">
					@*<button class="btn btn-lg d-block btn-danger">Continue Shopping</button>*@
					<a asp-page="Product" class="btn btn-lg d-block btn-success">Continue Shopping</a>
				</div>
				<div class="col-sm-12 col-md-6 text-end">
					@*<button class="btn btn-lg d-block btn-danger text-uppercase">CheckOut</button>*@
					<a asp-page="Checkout" class="btn btn-lg d-block btn-danger text-uppercase">Checkout</a>
				</div>
			</div>
		</div>
	</div>
</div>
